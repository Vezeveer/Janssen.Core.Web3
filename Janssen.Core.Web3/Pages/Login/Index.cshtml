@page
@model Janssen.Core.Web3.Pages.LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SAJCTI - Login</title>
    <link href="~/css/login.css" rel="stylesheet" asp-append-version="true"/>
</head>
<body>
    <section>
        <div class="login-page">
            <div class="form">
                <form method="post" class="register-form">
                    <input type="text" placeholder="name" />
                    <input type="password" placeholder="password" />
                    <input type="text" placeholder="email address" />
                    <button>create</button>
                    <p class="message">Already registered? <a href="#">Sign In</a></p>
                   </form>

                <form method="post" class="login-form">
                    <input asp-for="UserName" type="text" placeholder="username" required />
                    <input asp-for="Password" type="password" placeholder="password" required />
                    <button>login</button>
                    <p class="text-danger" style="color:red !important;">
                        @Model.Message
                        @RouteData.Values["msg"]
                    </p>
                    @*<p class="message">Not registered? <a href="#">Create an account</a></p>*@
                </form>
            </div>
        </div>
    </section>
    <script src="~/js/login.js" asp-append-version="true"></script>
</body>
</html>
